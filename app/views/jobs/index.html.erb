<div class="index-header">
  <%= image_tag "peoplejumping.jpg", class:"photo-man" %>
  <p class="index-title"><strong>Find the helperr you're looking for!</strong></p>
</div>


<div class="index-content">
  <div class="search">
    <form id="search-bar" class=" form-inline">
      <% if @query.present? %>
        <input name="query" class="index-search" type="search" placeholder="Find a Helperr..." aria-label="Search">
      <% else %>
        <input name="query" class="index-search" type="search" aria-label="Search" placeholder="Find a Helperr...">
      <% end %>
        <button class="btn btn-primary index-search-btn" type="submit"><i class="fas fa-chevron-right"></i></button>
    </form>
  </div>


  <div class="filter">
    <div class="d-flex filter-content">
      <p class="filter-text"><i class="fas fa-filter"></i>  <strong>Filters</strong></p>
      <p class="filter-text"><i class="fas fa-caret-down filter-drop-down"></i>   </p>
      <p class="filter-text"><i class="fas fa-caret-down filter-drop-down"></i>  </p>
    </div>
  </div>


  <div class="container job-cards">
    <%# <% unless @users = [] %> 
      <% @users.each do |user| %>
        <div class="job-card">
          <div class="d-flex">
            <% if user.photo.attached? %>
              <%= cl_image_tag user.photo.key, class: "avatar-card", 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png", class: "avatar-card", 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>

            <div class="jobs-card-user-location">
              <p class="jobs-card-content"><strong><%= user.name %></strong></p>
              <p class="jobs-card-content"><%= user.username %></p>
              <p class="jobs-card-content"><i class="fas fa-thumbtack location-icon"></i>  <%= user.location %></p>
            </div>
          </div>

          <p class="ft-rating">
            <% unless user.rating.nil? %>
              <% if user.rating.round(1) < 0.5 %>
                <%= user.rating.round(1) %>
                <% 5.times do %>
                  <i class="far fa-star"></i>
                <% end %>

              <% elsif user.rating.round(1) < 1 %>
                <%= user.rating.round(1) %>
                <i class="fas fa-star-half-alt"></i>
                <% 4.times do %>
                  <i class="far fa-star"></i>
                <% end %>

              <% elsif user.rating.round(1) < 1.5 %>
                <%= user.rating.round(1) %>
                <i class="fas fa-star"></i>
                <% 4.times do %>
                  <i class="far fa-star"></i>
                <% end %>

              <% elsif user.rating.round(1) < 2 %>
                <%= user.rating.round(1) %>
                <i class="fas fa-star"></i>
                <i class="fas fa-star-half-alt"></i>
                <% 3.times do %>
                  <i class="far fa-star"></i>
                <% end %>

              <% elsif user.rating.round(1) < 2.5 %>
                <%= user.rating.round(1) %>
                <% 2.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <% 3.times do %>
                  <i class="far fa-star"></i>
                <% end %>

              <% elsif user.rating.round(1) < 3 %>
                <%= user.rating.round(1) %>
                <% 2.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <i class="fas fa-star-half-alt"></i>
                <% 2.times do %>
                  <i class="far fa-star"></i>
                <% end %>

              <% elsif user.rating.round(1) < 3.5 %>
                <%= user.rating.round(1) %>
                <% 3.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <% 2.times do %>
                  <i class="far fa-star"></i>
                <% end %>

              <% elsif user.rating.round(1) < 4 %>
                <%= user.rating.round(1) %>
                <% 3.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <i class="fas fa-star-half-alt"></i>
                <i class="far fa-star"></i>

              <% elsif user.rating.round(1) < 4.5 %>
                <%= user.rating.round(1) %>
                <% 4.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <i class="far fa-star"></i>

              <% elsif user.rating.round(1) < 5 %>
                <%= user.rating.round(1) %>
                <% 4.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <i class="fas fa-star-half-alt"></i>

              <% elsif user.rating.round(1) == 5 %>
                <%= user.rating.round(1) %>
                <% 5.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
              <% end %>
            <% end %>
          </p>

          <div class="user-jobs">
            <% user.jobs.each do |job| %>
              <p class="job-profession"><%= job.profession %> <strong>Â£<%= job.rate %></strong></p>
            <% end %>
          </div>

          <button class="btn btn-primary">Message Helperr</button>
        </div>
      <% end %>
    <%# <% end %>
  </div>
</div>


<div class="d-flex justify-content-center">
  <% number = 0 %>
  <% until number == 10 %>
    <% number += 1 %>
    <%= link_to jobs_path do %>
      <%= number %>
    <% end %>
  <% end %>
</div>


<%= render 'shared/footer' %>
