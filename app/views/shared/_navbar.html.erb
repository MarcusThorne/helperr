<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <div class="ham-burger"><i class="fas fa-bars"></i></div>

  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "helperr-black.png" %>
  <% end %>


  <%= link_to new_user_session_path, class: "nav-link" do %>
    <div class="log-in-symbol"><i class="fas fa-sign-in-alt"></i></div>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active d-flex">
          <% if current_page?(root_path) %>

            <% if @job.nil? %>
              <%= link_to "Services", jobs_path, class: "nav-link mr-2" %>
            <% else %>
              <%= link_to "Services", job_path(@job), class: "nav-link mr-2" %>
            <% end %>

          <% else %>
            <%= link_to "Home", root_path, class: "nav-link mr-2" %>
          <% end %>
          <%= link_to "Messages", messages_path, class: "nav-link mr-4" %>
        </li>

        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, crop: :thumb, gravity: :face %>
          <% else %>
            <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", my_profile_path, class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
        <li class="nav-item d-flex">
          <% if @job.nil? %>
            <%= link_to "Services", jobs_path, class: "nav-link mr-2" %>
          <% else %>
            <%= link_to "Services", job_path(@job), class: "nav-link mr-2" %>
          <% end %>

          <%= link_to "Login", new_user_session_path, class: "nav-link mr-4" %>
          <%= link_to "Become a Helperr", new_user_registration_path, class: "btn btn-primary", style:"margin-right: 16px;" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
